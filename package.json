  "description": "Sitio est√°tico con Netlify CMS optimizado",
  "scripts": {
    "prebuild": "node scripts/generar-json.js",
    "build:css": "postcss css/style.css -o dist/style.css",
    "build:js": "node build.js",
    "build:html": "cpx index.html dist",
